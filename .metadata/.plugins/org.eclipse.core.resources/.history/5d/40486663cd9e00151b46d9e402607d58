	/** Retorna uma matriz com 0 aonde não existe bomba e 1 aonde existe */
	private int[][] posicaoBombas() {
		int[][] posicao = new int[13][13];
		
		for(int i = 0; i < 13; i++) 
			for(int j = 0; j < 13; j++) 
				posicao[i][j] = 0;
				
		for(Bomb b : bombs) 
			posicao[(int)(b.getPosition().x-16)/32][(int)(b.getPosition().y-16)/32] = 1;
		
		return posicao;
	}
	
